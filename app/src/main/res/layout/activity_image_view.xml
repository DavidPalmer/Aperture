<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rewyndr.reflectbig.Activity.SinglePhotoView_Activity">
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/singleView_viewPager_currentImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/come_to_bottom"
        android:layout_marginLeft="@dimen/center"
        android:numStars="4"
        android:stepSize="1.0"
        android:rating="2.0" />
</RelativeLayout>
